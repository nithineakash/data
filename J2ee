import java.io.IOException;
import java.io.PrintWriter;
import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

public class TaskServlet extends HttpServlet {
	protected void doGet(HttpServletRequest request, HttpServletResponse response)
			throws ServletException, IOException {
		PrintWriter out=response.getWriter();
		String a="Akash";
		String b="12345";
		String user=request.getParameter("uname");
		String poss=request.getParameter("poss");
		if((a.equals(user)&&b.equals(poss))) {
			out.println("username="+user);
			out.println("possword="+poss);
			out.println("LOGIN SUCCESSFULLY");
		}
		else {
			RequestDispatcher rd=request.getRequestDispatcher("/afg");
			rd.forward(request, response);	
		}
		}
}
import java.io.IOException;
import java.io.PrintWriter;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

public class TaskServlet2 extends HttpServlet {
	protected void doGet(HttpServletRequest request, HttpServletResponse response)
			throws ServletException, IOException {
		PrintWriter out=response.getWriter();
		out.println("LOGIN FAILED");
		RequestDispatcher rd=request.getRequestDispatcher("/task.html");
		rd.include(request, response);	
	}
}
