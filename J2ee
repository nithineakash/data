  <servlet-mapping>
  <servlet-name>avs</servlet-name>
  <url-pattern>/abc</url-pattern>
  </servlet-mapping>
  <servlet>
  <servlet-name>avs</servlet-name>
  <servlet-class>TaskServlet</servlet-class>
  </servlet>
   <servlet-mapping>
  <servlet-name>asv</servlet-name>
  <url-pattern>/afg</url-pattern>
  </servlet-mapping>
  <servlet>
  <servlet-name>asv</servlet-name>
  <servlet-class>TaskServlet2</servlet-class>
  </servlet>
